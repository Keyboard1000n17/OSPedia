#homeContainer{display:grid;grid-template-columns:1fr 1fr 1fr;grid-template-rows:auto;margin:10px;height:90%}.macver,.winver{justify-content:center;align-content:center;margin:1vh;padding:3vh;border-radius:10px;height:5rem;background-position:center center;display:grid;transition:filter,box-shadow ease-out .3s,height ease .2s}.macver:hover,.winver:hover{filter:brightness(160%);box-shadow:0 0 15px 5px #000;height:4.5rem}.macref,.winref{text-decoration:none;color:#fff}
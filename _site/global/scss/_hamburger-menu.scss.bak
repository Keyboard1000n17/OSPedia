:root{--vh:99dvh}img.hamburger-menu-close{position:absolute;top:1.5rem;right:10px;width:24px;height:24px}div.hamburger-menu{position:fixed;height:var(--vh);top:0;right:-12rem;text-align:center;background-color:rgba(255,255,255,.75);border-radius:$border-radius;box-shadow:0 4px 8px rgba(0,0,0,.2);padding:.5rem 1rem;width:10rem;display:flex;pointer-events:none;transition:right .3s ease}div.hamburger-menu-blur{background-color:rgba(255,255,255,0);backdrop-filter:blur(5px);position:fixed;height:var(--vh);top:0;right:-12rem;transition:right .3s ease;width:10rem;padding:.5rem 1rem;margin:0;pointer-events:none;transition:right .3s ease;display:block;border-radius:$border-radius}div.hamburger-menu.show{display:flex;right:0;flex-direction:column;align-items:center;justify-content:center;transform:translateX(0);pointer-events:auto;z-index:9999}div.hamburger-menu-blur.show{transform:translateX(0);z-index:90;right:0}div.hamburger-menu ul{display:flex;flex-direction:column;height:100%;align-items:center;justify-content:center}div.hamburger-menu li{padding:20% 1vw;text-align:right;list-style:none}div.hamburger-menu a{color:#3266fb;text-decoration:none}img.hamburger-menu-logo{position:absolute;width:90%!important;bottom:2%}